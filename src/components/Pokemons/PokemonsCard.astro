---
interface Props {
    pokemon: string,
    name: string
}
const { pokemon, name } = Astro.props;
const id = pokemon.split('/').at(-2);
const imageUrl = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/dream-world/${id}.svg`;
---

<div class="rounded flex flex-col justify-center items-center gap-2 border p-2 border-slate-600">
    <img src={imageUrl} alt="">
    <span>{ name }</span>
</div>